{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@angelabc/utils/*": [
        "packages/utils/src/*"
      ],
      "@angelabc/schemas/*": [
        "packages/schemas/src/*"
      ]
    }
  }
}
